# Plex Environment Variables
# Copy this file to .env and fill in your values

# User/Group IDs (run: id -u and id -g)
PUID=1000
PGID=1000

# Timezone
TZ=America/New_York

# Docker logging
DOCKERLOGGING_MAXFILE=3
DOCKERLOGGING_MAXSIZE=10m

# Docker paths (Synology example)
DOCKERCONFDIR=/volume1/docker/appdata
DOCKERSTORAGEDIR=/volume1/docker/storage

# Plex specific
PLEX_CLAIM_TOKEN=your-plex-claim-token-here
PLEX_ADVERTISE_URL=https://streaming.specterrealm.com
PLEX_BETA_INSTALL=false

# Network
LAN_NETWORK=172.16.0.0/12

# Pullio (optional - for auto-updates)
PULLIO_UPDATE=false
PULLIO_NOTIFY=false
PULLIO_DISCORD_WEBHOOK=
