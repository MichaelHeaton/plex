# Plex Media Server Environment Configuration
# Generated by Ansible

# User and group for Plex Media Server
PLEX_MEDIA_SERVER_USER={{ plex_user }}
PLEX_MEDIA_SERVER_GROUP={{ plex_user }}

# Transcoding directory
PLEX_MEDIA_SERVER_TMPDIR={{ streaming_mount }}/transcoding

# Application support directory (database location)
PLEX_MEDIA_SERVER_APPLICATION_SUPPORT_DIR=/var/lib/plexmediaserver/Library/Application Support

# Maximum number of simultaneous transcodes
# PLEX_MEDIA_SERVER_MAX_PLUGIN_PROCS=6

# Claim token (optional - set this to claim the server automatically)
# Get token from https://www.plex.tv/claim/ (valid for 4 minutes)
# PLEX_CLAIM_TOKEN=""

# Network settings
# Networks that don't require authentication (local networks)
# Format: comma-separated list of CIDR networks
PLEX_MEDIA_SERVER_NO_AUTH_NETWORKS="172.16.10.0/24,172.16.5.0/24,172.16.15.0/24"

# Additional options
# PLEX_MEDIA_SERVER_OPTIONS=""

